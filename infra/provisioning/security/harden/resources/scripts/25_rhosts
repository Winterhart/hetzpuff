function f_rhosts {
  echo "[$SCRIPT_COUNT] .rhosts"

  while read -r hostpasswd; do
    find "$hostpasswd" \( -name "hosts.equiv" -o -name ".rhosts" \) -exec rm -f {} \; 2> /dev/null

    if [[ $VERBOSE == "Y" ]]; then
      echo "$hostpasswd"
    fi

  done <<< "$(awk -F ":" '{print $6}' /etc/passwd)"

  if [[ -f /etc/hosts.equiv ]]; then
    rm /etc/hosts.equiv
  fi

  ((SCRIPT_COUNT++))
}
